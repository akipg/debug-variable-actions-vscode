{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build c.cpp",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=gnu++17",
        "-g",
        "${workspaceFolder}/c.cpp",
        "-o",
        "c.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },

    {
      "type": "cppbuild",
      "label": "C/C++: g++ build current file",
      "command": "g++",
      "args": [
        "-fdiagnostics-color=always",
        "-std=gnu++17",
        "-g",
        "${file}",
        "-o",
        "${fileBasenameNoExtension}.exe"
      ],
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
